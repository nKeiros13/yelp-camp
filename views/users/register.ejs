<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mb-3">
	<div class="row">
		<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
			<div class="card shadow">
				<div class="card-body">
					<img
						src="https://images.unsplash.com/photo-1494112142672-801c71472ba5?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80"
						alt=""
						class="card-img-top"
					/>
					<div class="card-title">Register!</div>
					<form
						action="/register"
						method="POST"
						class="mb-3 needs-validation"
						novalidate
					>
						<div class="mb-3">
							<label class="form-label" for="username">Username: </label>
							<input
								class="form-control"
								type="text"
								name="username"
								id="username"
								required
								autofocus
							/>
							<div class="valid-feedback">Looks Good!</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="email">Email</label>
							<input
								class="form-control"
								type="email"
								id="email"
								name="email"
								required
							/>
							<div class="valid-feedback">Looks good!</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="password">Password: </label>
							<input
								class="form-control"
								type="password"
								name="password"
								id="password"
								required
							/>
							<div class="valid-feedback">Looks Good!</div>
						</div>
						<div class="d-grid">
							<button class="btn btn-success btn-block">Register</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
