<% layout('layouts/boilerplate') %>

    <div class="row mb-3">
        <div class="col-6 offset-3">
            <div class="card">
                <img src="<%= foundCamp.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= foundCamp.title %>
                    </h5>
                    <p class="card-text">
                        <%= foundCamp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">It's located in: <strong>
                            <%= foundCamp.location %>
                    </li>
                    <li class="list-group-item">Price: â‚¬<%= foundCamp.price %>/night</li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%= foundCamp._id %>/edit" class="card-link btn btn-info">Edit Campground</a>
                    <form class="d-inline" action="/campgrounds/<%=foundCamp._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
