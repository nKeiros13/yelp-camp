<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/public/stylesheets/stars.css" />

<div class="container">
	<div class="row">
		<div class="col-6">
			<div
				id="carouselExampleControls"
				class="carousel slide"
				data-bs-ride="carousel"
			>
				<div class="carousel-inner">
					<% camp.image.forEach((img, i) =>{ %>
					<div class="carousel-item <%= i === 0? 'active' : ''%>">
						<img src="<%=img.url%>" class="d-block w-100" alt="" />
					</div>
					<% }) %>
				</div>
				<% if(camp.image.length >1){ %>
				<button
					class="carousel-control-prev"
					type="button"
					data-bs-target="#carouselExampleControls"
					data-bs-slide="prev"
				>
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button
					class="carousel-control-next"
					type="button"
					data-bs-target="#carouselExampleControls"
					data-bs-slide="next"
				>
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
				<% } %>
			</div>
			<div class="card mb-3">
				<div class="card-body">
					<h5 class="card-title"><%= camp.title %></h5>
					<p class="card-text"><%= camp.description %></p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item text-muted">
						It's located in: <strong> <%= camp.location %> </strong>
					</li>
					<li class="list-group-item">
						Submitted by: <strong> <%= camp.author.username %> </strong>
					</li>
					<li class="list-group-item">Price: â‚¬<%= camp.price %>/night</li>
				</ul>
				<% if(currentUser && (camp.author.equals(currentUser._id))) {%>
				<div class="card-body">
					<a
						href="/campgrounds/<%= camp._id %>/edit"
						class="card-link btn btn-info btn-sm"
						>Edit Campground</a
					>
					<form
						class="d-inline"
						action="/campgrounds/<%=camp._id%>?_method=DELETE"
						method="POST"
					>
						<button class="btn btn-danger btn-sm">Delete!</button>
					</form>
				</div>
				<% } %>
			</div>
		</div>
		<div class="col-6">
			<div id="map" style="width: 400px; height: 300px"></div>
			<% if(currentUser) { %>
			<h5>Leave a Review</h5>
			<form
				action="/campgrounds/<%= camp._id %>/reviews"
				method="POST"
				class="mb-3 needs-validation"
				novalidate
			>
				<div class="mb-3">
					<label for="rating" class="form-label">Rating:</label>
					<input
						type="range"
						class="form-range"
						min="1"
						max="10"
						name="review[rating]"
						id="rating"
					/>
				</div>
				<div class="mb-3">
					<label for="reviewBody" class="form-label">Review:</label>
					<textarea
						name="review[body]"
						class="form-control"
						id="reviewBody"
						cols="30"
						rows="5"
						required
					></textarea>
					<div class="valid-feedback">Looks good!</div>
				</div>
				<button class="btn btn-success btn-sm">Submit Review</button>
			</form>
			<% } %> <% for(let review of camp.reviews) { %>
			<div class="card mb-3">
				<div class="card-body">
					<h5 class="card-title">By <%= review.author.username %></h5>
					<fieldset class="starability-coinFlip"></fieldset>
					<p class="card-text">Review: <%= review.body %></p>
					<% if(currentUser && (review.author.equals(currentUser._id))) {%>
					<form
						action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE"
						method="POST"
					>
						<button class="btn btn-danger btn-sm">Delete</button>
					</form>
					<%} %>
				</div>
			</div>
			<% } %>
		</div>
	</div>
</div>

<script>
	const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
	const camp = <%-JSON.stringify(camp)%>;
</script>
<script src="/javascripts/showPageMap.js"></script>
