<% layout('layouts/boilerplate') %>


    <div class="row">
        <h1 class="text-center">Create your own campground!</h1>
        <div class="col-6 offset-3">
            <div class="mb-3">
                <form action="/campgrounds" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title: </label>
                        <input class="form-control" type="text" name="campground[title]" id="title">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price: </label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="price-label">â‚¬</span>
                            <input type="number" class="form-control" name="campground[price]" placeholder="0.00"
                                aria-label="price" aria-describedby="price-label">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL: </label>
                        <input class="form-control" type="text" name="campground[image]" id="image">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description: </label>
                        <textarea class="form-control" name="campground[description]" id="description" cols="30"
                            rows="5"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location: </label>
                        <input class="form-control" type="text" name="campground[location]" id="location">
                    </div>
                    <button class="btn btn-success">Add Campground</button>
                </form>
            </div>
            <div class="mb-3">
                <a href="/campgrounds"><button class="btn btn-primary">Index</button></a>
            </div>
        </div>
    </div>
