<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <center>
                        Error Status Code: <%= err.statusCode %>
                    </center>
                </h4>
                <p>
                    <%= err.message %>
                </p>
                <hr>
                <p class="mb-2">
                    <%= err.stack %>
                </p>
            </div>
        </div>
    </div>
